{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "botwa-new/Dockerfile",
    "watchPatterns": [
      "botwa-new/**"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "restartPolicyType": "ALWAYS",
    "numReplicas": 1,
    "sleepApplication": false,
    "requiredMountPath": "/data"
  }
}
